use demo_DATABASE;
USE WAREHOUSE DEMO_WAREHOUSE;
CREATE OR REPLACE TABLE COWS_ONE (CNUMBER_1 INT, CBREED VARCHAR (20));
INSERT INTO COWS_ONE VALUES (1, 'HOLSTEIN');
INSERT INTO COWS_ONE VALUES (2, 'GUERNSEY');
INSERT INTO COWS_ONE VALUES (3, 'ANGUS');
INSERT INTO COWS_ONE VALUES (4, 'MOU');
INSERT INTO COWS_ONE VALUES (5, 'HONEY');
SELECT * FROM COWS_ONE;

CREATE OR REPLACE TABLE COWS_TWO (CNUMBER_2 INT, CBREED_2 VARCHAR (20));
INSERT INTO COWS_TWO VALUES (2, 'JERSEY');
INSERT INTO COWS_TWO VALUES (3, 'BROWN_SWISS');
INSERT INTO COWS_TWO VALUES (4, 'AYRSHIRE');

SELECT * FROM COWS_TWO;

SELECT X.* ,Y.CBREED_2
FROM COWS_ONE AS X
INNER JOIN COWS_TWO AS Y ON X.CNUMBER_1 = Y.CNUMBER_2;


CREATE OR REPLACE TABLE NT_OWNER
(
  OWNER_ID INT NOT NULL PRIMARY KEY,
  NAME VARCHAR (20),
  SURNAME STRING,
  STREET_ADRESS VARCHAR (50),
  CITY STRING,
  STATE VARCHAR (4),
  STATE_FULL STRING,
  ZIP_CODE INT
  );
  
  CREATE OR REPLACE TABLE NT_PETS
  (
  PET_ID VARCHAR(10) NOT NULL PRIMARY KEY,
    NAME VARCHAR (20),
    KIND STRING,
    GENDER VARCHAR (7),
    AGE INT,
    OWNER_ID INT NOT NULL REFERENCES NT_OWNER);
    
    "DEMO_DATABASE"."PUBLIC"."NT_OWNER"
    
    SELECT * FROM NT_OWNER;
     SELECT * FROM NT_PETS;
 
---CREATE MASTER TABLE---
CREATE OR REPLACE TABLE NT_OWNER_PETS AS
SELECT O.OWNER_ID,O.NAME AS OWNER_NAME,SURNAME, CITY, STATE, ZIP_CODE, P.PET_ID, P.NAME AS PET_NAME, KIND, GENDER, AGE
FROM NT_OWNER AS O
INNER JOIN NT_PETS AS P ON O.OWNER_ID = P.OWNER_ID;

SELECT * FROM NT_OWNER_PETS;

---LEFT OUTER JOIN----
CREATE OR REPLACE TABLE NT_OWNER_PETS AS
SELECT O.OWNER_ID,O.NAME AS OWNER_NAME,SURNAME, CITY, STATE, ZIP_CODE, P.PET_ID, P.NAME AS PET_NAME, KIND, GENDER, AGE
FROM NT_PETS AS P
LEFT OUTER JOIN NT_OWNER AS O ON P.OWNER_ID = O.OWNER_ID;

SELECT X.* ,Y.CBREED_2
FROM COWS_ONE AS X
LEFT OUTER JOIN COWS_TWO AS Y ON X.CNUMBER_1 = Y.CNUMBER_2;
    
